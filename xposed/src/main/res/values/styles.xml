<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--   your app's branding color (for the app bar) -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:icon">@color/icons</item>
        <item name="android:divider">@color/divider</item>
        <!-- for Action Mode -->
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- Customize your theme here. -->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <!--   your app's branding color (for the app bar) -->
        <item name="colorPrimary">@color/dialog_primary</item>
        <item name="colorPrimaryDark">@color/dialog_primary_dark</item>
        <item name="colorAccent">@color/dialog_accent</item>
        <item name="android:textColorPrimary">@color/dialog_primary_text</item>
        <item name="android:textColorSecondary">@color/dialog_secondary_text</item>
        <item name="android:icon">@color/dialog_icons</item>
        <item name="android:divider">@color/dialog_divider</item>
    </style>
</resources>
